{
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api/proxy/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}