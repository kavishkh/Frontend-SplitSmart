{
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api/proxy/$1"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      },
      "continue": true
    }
  ]
}